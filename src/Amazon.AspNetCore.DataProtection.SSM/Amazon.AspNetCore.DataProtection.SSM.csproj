<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net6.0;net7.0;net8.0</TargetFrameworks>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <Description>AWS Systems Manager ASP.NET Core Data Protection Provider library allows you to use AWS Systems Manager's Parameter Store to store keys generated by ASP.NET's Data Protection API.</Description>
    <AssemblyTitle>Amazon.AspNetCore.DataProtection.SSM</AssemblyTitle>
    <AssemblyName>Amazon.AspNetCore.DataProtection.SSM</AssemblyName>
    <PackageId>Amazon.AspNetCore.DataProtection.SSM</PackageId>
    <PackageTags>AWS;Amazon;SSM</PackageTags>
    <Title>AWS Systems Manager ASP.NET Core Data Protection Provider</Title>
    <Product>Amazon.AspNetCore.DataProtection.SSM</Product>
    <Authors>Amazon Web Services</Authors>
    <Copyright>2018-2022</Copyright>
    <PackageTags>AWS;Amazon;SSM;Systems Manager</PackageTags>
    <PackageProjectUrl>https://github.com/aws/aws-ssm-data-protection-provider-for-aspnet</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/aws/aws-ssm-data-protection-provider-for-aspnet</RepositoryUrl>
    <Company>Amazon Web Services</Company>
    <SignAssembly>true</SignAssembly>
    <SignOnBuild>true</SignOnBuild>
    <Version>4.0.0-preview.1</Version>
	<WarningsAsErrors>CA1727</WarningsAsErrors>
  </PropertyGroup>

  <PropertyGroup>
    <AssemblyOriginatorKeyFile>..\..\public.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" PackagePath="" />
    <None Include="../../icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.Extensions.NETCore.Setup" Version="4.0.0-preview.3" />
    <PackageReference Include="AWSSDK.SimpleSystemsManagement" Version="4.0.0-preview.3" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="7.0.4">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.1'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Extensions" Version="3.1.*" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net6.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Extensions" Version="6.0.*" />
  </ItemGroup>
	
  <ItemGroup Condition="'$(TargetFramework)' == 'net7.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Extensions" Version="7.0.*" />
  </ItemGroup>
	
  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection.Extensions" Version="8.0.*" />
  </ItemGroup>

</Project>
