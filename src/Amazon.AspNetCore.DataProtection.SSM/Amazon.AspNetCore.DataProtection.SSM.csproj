<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0;netstandard2.0</TargetFrameworks>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
    <Description>AWS Systems Manager ASP.NET Core Data Protection Provider library allows you to use AWS Systems Manager's Parameter Store to store keys generated by ASP.NET's Data Protection API.</Description>
    <AssemblyTitle>Amazon.AspNetCore.DataProtection.SSM</AssemblyTitle>
    <AssemblyName>Amazon.AspNetCore.DataProtection.SSM</AssemblyName>
    <PackageId>Amazon.AspNetCore.DataProtection.SSM</PackageId>
    <PackageTags>AWS;Amazon;SSM</PackageTags>
    <Title>AWS Systems Manager ASP.NET Core Data Protection Provider</Title>
    <Product>Amazon.AspNetCore.DataProtection.SSM</Product>
    <Authors>Amazon Web Services</Authors>
    <Copyright>2018-2022</Copyright>
    <PackageTags>AWS;Amazon;SSM;Systems Manager</PackageTags>
    <PackageProjectUrl>https://github.com/aws/aws-ssm-data-protection-provider-for-aspnet</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageIcon>icon.png</PackageIcon>
    <RepositoryUrl>https://github.com/aws/aws-ssm-data-protection-provider-for-aspnet</RepositoryUrl>
    <Company>Amazon Web Services</Company>
    <SignAssembly>true</SignAssembly>
    <SignOnBuild>true</SignOnBuild>
    <Version>4.0.0-preview.4</Version>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
	  
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    
	  <WarningsAsErrors>CA1727</WarningsAsErrors>
  </PropertyGroup>
	
  <PropertyGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <IsTrimmable>true</IsTrimmable>
  </PropertyGroup>	

  <PropertyGroup>
    <AssemblyOriginatorKeyFile>..\..\public.snk</AssemblyOriginatorKeyFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../LICENSE" Pack="true" PackagePath="" />
    <None Include="../../icon.png" Pack="true" PackagePath="" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AWSSDK.Extensions.NETCore.Setup" Version="4.0.0-preview.8" />
    <PackageReference Include="AWSSDK.SimpleSystemsManagement" Version="4.0.0-preview.8" />
    <PackageReference Include="Microsoft.CodeAnalysis.NetAnalyzers" Version="9.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />	  
  </ItemGroup>
  
  <ItemGroup Condition="'$(TargetFramework)' == 'net9.0' or '$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net8.0'">
    <PackageReference Include="Microsoft.AspNetCore.DataProtection" Version="8.0.11" />
  </ItemGroup>
  

</Project>
